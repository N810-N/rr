<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>

<h1>マイカレンダー</h1>

<div class="calendar">
  <%= month_calendar events: (@blogs || []) do |date, blogs| %>
    <%= date.day %>

    <% blogs.each do |blog| %>
      <div>
        <%= link_to blog.title, blog %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="blogs-list">
  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>時間</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.start_time.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= link_to 'Show', blog %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog.id) %></td>
          <td><%= link_to 'Destroy', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '時間を記入する', new_blog_path, class: "btn btn-primary" %>
</div>

<div class="logout-button">
  <%= button_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
</div>


<div class="sleep-check-button">
  <%= link_to "睡眠診断をする", new_sleep_check_path, class: "btn btn-success" %>
</div>




